<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>SimpleConsoleProgress</AssemblyName>
    <Version>1.0.0-rc1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Filip Liwiński</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>Simple progress indicator for .NET console projects.</Description>
    <Copyright>Filip Liwiński</Copyright>
    <PackageProjectUrl>https://github.com/filipliwinski/SimpleConsoleProgress</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/filipliwinski/SimpleConsoleProgress/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>console, progress, progressbar</PackageTags>
  </PropertyGroup>

</Project>
