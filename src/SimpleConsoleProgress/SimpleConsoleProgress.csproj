<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.4;netstandard2.0;netstandard2.1</TargetFrameworks>
    <AssemblyName>SimpleConsoleProgress</AssemblyName>
    <Version>1.1.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Filip Liwiński</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>Simple progress indicator for .NET console projects.</Description>
    <Copyright>Filip Liwiński</Copyright>
    <PackageProjectUrl>https://github.com/filipliwinski/SimpleConsoleProgress</PackageProjectUrl>
    <PackageTags>console, progress, progressbar</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
